{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "outDir": "./lib",
    "typeRoots": ["node_modules/@types", "./typings"],
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "exclude": ["./node_modules", "./android", "./ios", "./assets", "./__tests__"],
  "include": ["./src"]
}
